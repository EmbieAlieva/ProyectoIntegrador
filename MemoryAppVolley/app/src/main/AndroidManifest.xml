<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ekaitz_torregrosa.memoryapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"


        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MemoryApp">
        <activity android:name=".activities.GameActivity" android:parentActivityName=".activities.MainActivity"></activity>
        <activity android:name=".activities.PunctuationActivity" android:parentActivityName=".activities.MainActivity"></activity>
        <activity android:name=".activities.PunctuationDetailsActivity" android:parentActivityName=".activities.PunctuationActivity"/>
        <activity android:name=".activities.CreditsActivity" android:parentActivityName=".activities.MainActivity"></activity>
        <activity android:name=".activities.MainActivity"></activity>

        <activity android:name=".splash.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>