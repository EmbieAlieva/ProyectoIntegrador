<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.CreditsActivity">

    <TextView
        android:id="@+id/textViewCreditsAuthor"
        android:layout_width="219dp"
        android:layout_height="72dp"
        android:text="@string/author"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCreditsModulo"
        android:layout_width="292dp"
        android:layout_height="65dp"
        android:rotationX="17"
        android:text="@string/modulo"
        android:textAlignment="center"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreditsAuthor"
        app:layout_constraintVertical_bias="0.18" />

    <ImageView
        android:id="@+id/imageViewCreditsCentro"
        android:layout_width="403dp"
        android:layout_height="120dp"
        android:rotationX="21"
        app:layout_constraintBottom_toTopOf="@+id/textViewCreditsAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cuatrovientos" />
</androidx.constraintlayout.widget.ConstraintLayout>